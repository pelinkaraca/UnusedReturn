    .btn-cancel{background:#6b7280; color:#fff}
    .btn-print{background:#10b981; color:#fff}
    .btn-print:hover{background:#0ea371}
    .table-wrap{border:1px solid var(--gray-200); border-radius:10px; overflow:hidden; margin-top:16px}
